<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/itemTheatersImg"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/theater_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTheatersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Большой театр Беларуси"
        android:textSize="16sp"
        android:textColor="@color/color4"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="@+id/itemTheatersImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemTheatersImg" />

</androidx.constraintlayout.widget.ConstraintLayout>